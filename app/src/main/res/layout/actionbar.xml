<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/location_button"
        android:layout_margin="8dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:id="@+id/location_button"/>

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/edit_text_background"

       >

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:background="@drawable/search"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/action_image"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="Search here..."
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/action_image"
            android:layout_marginLeft="10dp"
            android:id="@+id/actionInput"
            android:clickable="true"
            android:focusableInTouchMode="true"
            android:textColor="@android:color/darker_gray"
            android:onClick="inputClick"
            android:cursorVisible="false"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/actionInput"
            android:background="@drawable/close_icon"
            android:visibility="gone"/>

    </RelativeLayout>

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/menu_drawer"
        android:layout_margin="8dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:id="@+id/menuButton"/>


</RelativeLayout>