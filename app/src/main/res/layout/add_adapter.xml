<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/add_image_bg"
        android:layout_margin="5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/imageLay"
        android:padding="2dp">

        <ImageView
            android:id="@+id/AddImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </RelativeLayout>




    <TextView
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/imageLay"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/imageLay"
        android:background="@drawable/price_bg"
        android:text="$38.485"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/hdesc"
        android:layout_alignLeft="@+id/imageLay"
        android:layout_alignStart="@+id/imageLay"
        android:layout_marginLeft="10dp"
        android:textColor="@android:color/white"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/hdesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageLay"
        android:layout_alignLeft="@+id/imageLay"
        android:layout_alignStart="@+id/imageLay"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:textColor="@android:color/white"
        android:textSize="15dp" />


</RelativeLayout>